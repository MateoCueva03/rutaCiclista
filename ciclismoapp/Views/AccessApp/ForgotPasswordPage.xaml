<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ciclismoapp.Views.AccessApp.ForgotPasswordPage">
    <ContentPage.Content>
        <StackLayout Padding="15" VerticalOptions ="Center">

            <Label Text="Correo para recuperar tu contraseña"
                   FontSize="Large"
                   VerticalOptions="Center"
                   HorizontalOptions="Center">
                
            </Label>
            <Entry Placeholder="Ingresa tu correo electrónico" x:Name="TxtEmail"> </Entry>
            <Button Text="Enviar enlace"
                    x:Name="ButtonSendLink"
                    Clicked="ButtonSendLink_Clicked"></Button>
            
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>